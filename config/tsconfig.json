{
    "extends": ["@fkui/tsconfig/recommended", "@fkui/vue/tsconfig.json"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": true,
        "jsx": "preserve",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"],
    "exclude": ["vite.config.ts", "cypress.config.ts"]
}
